<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.applicaster.awscognitologin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".screens.signin.SignInActivity" />
        <activity android:name=".screens.signup.SignUpActivity" />
        <activity android:name=".screens.confirmation.ConfirmationCodeActivity" />
        <activity android:name=".screens.activate.ActivateAccountActivity" />
        <activity android:name=".screens.forgot.ForgotPasswordActivity" />
        <uses-library android:name ="org.apache.http.legacy" android:required ="false"/>
    </application>
</manifest>
